{
    "compilerOptions": {
        "target": "es2017",
        "module": "commonjs",
        "declaration": true,
        "outDir": "./lib",
        "strict": true,
        "skipLibCheck": true,
        "esModuleInterop": true,
        "moduleResolution": "node",
        "typeRoots": ["./src/types", "./node_modules/@types"],
        "lib": ["es2017", "dom"],
        "allowJs": true
    },
    "include": ["src", "bin", "compiled"],
    "exclude": ["node_modules", "**/__tests__/*", "lib", "test"]
}
